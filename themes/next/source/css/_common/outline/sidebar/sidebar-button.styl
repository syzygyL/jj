.sidebar-button {
  margin-top: 15px;

  a {
    border: 1px solid $blue;
    border-radius: 4px;
    color: $blue;
    display: inline-block;
    padding: 0 15px;

    .fa {
      margin-right: 5px;
    }

    &:hover {
      background: $blue;
      border: 1px solid $blue;
      color: white;

      .fa {
        color: white;
      }
    }
  }
}
